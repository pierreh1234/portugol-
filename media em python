nome = input("qual e o seu nome?\n")
diciplina = input("qual e a diciplina?\n")
n1 = int(input("qual e a nota 1\n"))
n2 = int(input("qual e a nota 3\n"))
n3 = int(input("qual e a nota 3\n"))
media = (n1 + n2 + n3)/3
if media >= 6:
    print ("nome do aluno:",nome)
    print ("diciplina:",diciplina)
    print("media:",media)
    print("aprovado")
elif media <= 6:
    print("nome do aluno:", nome)
    print("diciplina:", diciplina)
    print("media:", media)
    print("recuperaçao")
    rec = float(input("qual foi a nota da recuperaçao?\n"))
if rec >= 6:
    print("nome do aluno:", nome)
    print("diciplina:", diciplina)
    print("nota da recuperaçao:", rec)
    print("aprovado")
elif rec <= 6:
    print("nome do aluno:", nome)
    print("diciplina:", diciplina)
    print("nota da recuperaçao:", rec)
    print("prova final")
    pf = float(input("qual foi a nota da prova final?\n"))
if pf >=  6:
    print("nome do aluno:", nome)
    print("diciplina:", diciplina)
    print("nota da prova final:", pf)
    print("aprovado")
elif pf <= 6:
    print("nome do aluno:", nome)
    print("diciplina:", diciplina)
    print("nota da prova final:", pf)
    print("reprovado")
